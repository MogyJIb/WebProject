<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <description>MsSql</description>
    <resource-ref>
        <description>MS Sql DB Connection Pool</description>
        <res-ref-name>jdbc/TravelAgency</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <servlet>
        <servlet-name>getAllToursServlet</servlet-name>
        <servlet-class>by.gstu.training.controllers.GetAllToursServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getAllToursServlet</servlet-name>
        <url-pattern>/getAllTours</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>by.gstu.training.controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>



    <servlet>
        <servlet-name>test</servlet-name>
        <servlet-class>by.gstu.training.controllers.TestRunnerController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>test</servlet-name>
        <url-pattern>/hg</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>pages/index.html</welcome-file>
    </welcome-file-list>

    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
</web-app>